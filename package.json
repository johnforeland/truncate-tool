{
  "name": "truncate-tool",
  "version": "0.5.0",
  "description": "GitHub Action to truncate text at a certain line count and add a read more link",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnforeland/truncate-tool.git"
  },
  "keywords": [
    "truncate"
  ],
  "author": "John FÃ¸reland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnforeland/truncate-tool/issues"
  },
  "homepage": "https://github.com/johnforeland/truncate-tool#readme",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "preinstall": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied' && cp .env.example .env",
    "bundle": "npm run format:write && npm run package",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest --verbose",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "npx eslint --fix"
    ],
    "*.{js,ts,mjs,json,md}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@github/local-action": "^3.2.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@semantic-release/exec": "^7.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.*.*",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "branch-name-lint": "^3.0.1",
    "eslint": "^9.29.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.13.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.0",
    "jest-circus": "^30.0.0",
    "lint-staged": "^16.1.2",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.43.0",
    "rollup-plugin-license": "^3.6.0",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.3.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.3"
  }
}
