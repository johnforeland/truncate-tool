{
  "name": "truncate-tool",
  "version": "0.5.0",
  "description": "GitHub Action to truncate text at a certain line count and add a read more link",
  "main": "dist/index.js",
  "scripts": {
    "all": "npm run format:write && npm run lint && npm run package",
    "bundle": "npm run format:write && npm run package",
    "test": "jest",
    "test:watch": "jest --watch",
    "format:check": "prettier --check **/*.ts",
    "format:write": "prettier --write **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "preinstall": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnforeland/truncate-tool.git"
  },
  "keywords": [
    "truncate"
  ],
  "author": "John FÃ¸reland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnforeland/truncate-tool/issues"
  },
  "homepage": "https://github.com/johnforeland/truncate-tool#readme",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}
